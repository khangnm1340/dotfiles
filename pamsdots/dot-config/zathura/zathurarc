

# set scrolling options
set scroll-step 100

set font "SF Pro 16"
# mappings

map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map - zoom out
map = zoom in
map h navigate previous
map l navigate next

set selection-clipboard clipboard

set recolor false
set recolor-keephue true
set default-bg rgba(0,0,0,0)
set default-fg rgba(255,255,255,1)
# include catppuccin-latte
# include catppuccin-macchiato
